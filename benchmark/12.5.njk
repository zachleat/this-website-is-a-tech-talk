	code: `// is this highlighted
var test = "hi";`,
	format: 'js'
}
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title></title>
		<link rel="stylesheet" href="/css/prism-material-oceanic.css">
		<style>
		.charwrap:not(.typed) {
			display: none;
		}
		</style>
	</head>
	<body>
		{{ code | characterWrap(format, ["0"]) | safe }}
		<script>
		document.addEventListener("keydown", function(e) {
			let nextCharacter = document.querySelector(".charwrap:not(.typed)");
			if(nextCharacter) {
				nextCharacter.classList.add("typed");
			}
		});
		</script>
	</body>
</html>